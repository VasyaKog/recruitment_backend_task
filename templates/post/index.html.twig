{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}

<div class="example-wrapper">
    <article>

        {% for post in posts %}
            <h1><a href="{{ path('app_post_show', {id: post.id}) }}">{{ post.title }}</a></h1>

            <p>
                {{ post.content | nl2br }}
            </p>
        {% endfor %}

    </article>
</div>
{% endblock %}
